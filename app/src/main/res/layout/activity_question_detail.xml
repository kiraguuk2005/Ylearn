<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".QuestionDetail">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question Details"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="John doe"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programming"
                android:layout_marginHorizontal="20dp"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_marginStart="70dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="1 hour"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the difference between TCP/IP"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I would like to understand the difference between TCP/IP and UDP protocols especially when it comes to multimedia/video processing."
        android:layout_marginHorizontal="20dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="Views 11k" />

        <TextView
            android:id="@+id/tvAnswers"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="Answers 3" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="75dp"
            android:text="Post Answer"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_comment_24"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answers"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUserPost"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPosterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="John doe"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tvPosterTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Programming"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvpostTime"
                android:layout_marginStart="70dp"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="1 hour"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="380dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="370dp"
            android:text="TCP/IP and UDP are both protocols used for communication between devices over the internet. Here are the differences between them:
Connection-oriented vs. connectionless: TCP (Transmission Control Protocol) is a connection-oriented protocol, which means that a connection is established before data transfer can occur. UDP (User Datagram Protocol), on the other hand, is a connectionless protocol, which means that data can be sent without establishing a connection.
Reliability: TCP is a reliable protocol, which means that it ensures that all packets are received in the correct order, and retransmits any packets that are lost or damaged. UDP is an unreliable protocol, which means that it does not "

            />


    </LinearLayout>


</LinearLayout>
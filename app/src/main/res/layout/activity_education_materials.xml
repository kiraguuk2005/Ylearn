<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EducationMaterials">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUnderGrad"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#F2780C"
            android:text="UnderGraduates"
            />
        <Button
            android:id="@+id/btnPrimary"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#F2780C"
            android:layout_marginTop="20dp"
            android:text="Primary"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSeniorSec"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#F2780C"
            android:text="Senior Secondary"
            />

        <Button
            android:id="@+id/btnJuniorSec"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#F2780C"
            android:text="Junior Secondary"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn844"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#F2780C"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="8-4-4 System"
        />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PostPictorialQuestion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pictorial Question"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Question Title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeColor="#F2780C"
        app:hintTextColor="#F2780C">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="Enter Title"
            android:inputType="textMultiLine" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Enter Question "
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeColor="#F2780C"
        app:hintTextColor="#F2780C">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quizDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="Describe your Question"
            android:inputType="textMultiLine" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support Image"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="4dp"
        />

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_marginHorizontal="20dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/takeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:background="@drawable/flag_transparent"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginTop="80dp"
        android:backgroundTint="#F2780C"
        android:layout_marginHorizontal="100dp"
        />


</LinearLayout>
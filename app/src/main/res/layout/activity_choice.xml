<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Choice">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello there @UserName. \n Welcome to Ylearn where learning is simplified \n  Please chose your assistant today"
        android:textAlignment="center"
        android:layout_marginVertical="20dp"
        />

    <Button
        android:id="@+id/btnAi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:text="Ask Artificial intelligence"
        android:backgroundTint="#F2780C"
        android:layout_marginHorizontal="100dp"
        />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ask Human"
        android:backgroundTint="#F2780C"
        android:layout_marginHorizontal="100dp"
        />

    <Button
        android:layout_marginVertical="30dp"
        android:id="@+id/btnEarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Earn"
        android:backgroundTint="#F2780C"
        android:layout_marginHorizontal="100dp"
        />
    <Button
        android:layout_marginVertical="30dp"
        android:id="@+id/btnbooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Books"
        android:backgroundTint="#F2780C"
        android:layout_marginHorizontal="100dp"
        />



</LinearLayout>